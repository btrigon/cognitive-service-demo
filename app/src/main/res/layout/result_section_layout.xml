<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/result_section_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

    <TextView
        android:id="@+id/result_image_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:background="@color/light_green_80"
        android:text="WINNER"
        style="@style/TextViewCustomBoldFont"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:id="@+id/result_section_inner"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/result_image_thumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"
            android:padding="4dp"
            android:src="@drawable/face_placeholder"
            />

        <com.liulishuo.magicprogresswidget.MagicProgressBar
            android:id="@+id/result_progress"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            app:mpb_fill_color="@color/mpb_color"
            app:mpb_background_color="@android:color/white"
            app:mpb_flat="true"
        />
    </LinearLayout>
</LinearLayout>
