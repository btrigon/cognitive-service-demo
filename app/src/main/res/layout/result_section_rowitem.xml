<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_light"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        >
        <TextView
            android:id="@+id/result_rowitem_text"
            android:textColor="@android:color/white"
            tools:text="88"
            android:textSize="32dp"
            android:gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/result_rowitem_image"
            android:layout_marginLeft="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFFFF"
            android:padding="4dp"
            android:src="@drawable/face_placeholder"
            />

        <com.liulishuo.magicprogresswidget.MagicProgressBar
            android:id="@+id/result_rowitem_progress"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:mpb_fill_color="@color/mpb_color"
            app:mpb_background_color="@android:color/white"
            app:mpb_flat="true"
            />

    </LinearLayout>


    <View
        android:id="@+id/result_rowitem_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        />

</FrameLayout>